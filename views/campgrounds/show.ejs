<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="col-6 offset-3" bg-dark>
            <div class="card bg-dark text-light" style="width: 50rem;">
                <img src="<%= campground.image %>" alt="<%= campground.title %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-dark text-light">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item bg-dark text-light">$<%= campground.price %>/Night
                    </li>
                    <li class="list-group-item bg-dark text-light">A third item</li>
                </ul>
                <div class="card-body">
                    <button type="button" class="btn btn-primary" onclick="window.location.href='/campgrounds/new'">Add
                        New
                        Campground</button>
                    <button type="button" class="btn btn-info"
                        onclick="window.location.href='/campgrounds/<%= campground._id %>/update'">Update
                        Campground</button>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger" type="submit">Delete Campground</button>
                    </form>
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='/campgrounds'">Back
                        to Campgrounds</button>
                </div>
            </div>
            <form action="/campgrounds/<%= campground._id %>/reviews" class="mb-3 validated-form" method="POST"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
                </div>s
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                </div>
            </form>
            <% for(let review of campground.reviews) { %>
                <div class="mb-3">
                    <p>Rating: <%= review.rating %>
                    </p>
                    <p>Review: <%= review.body %>
                    </p>
                </div>
                <% } %>

        </div>
    </div>



    <footer>



    </footer>