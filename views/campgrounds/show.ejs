<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card" style="width: 37rem;">
                <img src="<%= campground.image %>" alt="<%= campground.title %>">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p> class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">An item</li>
                    <li class="list-group-item">A second item</li>
                    <li class="list-group-item">A third item</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
    </div>

    <h1>
        <%= campground.title %>
    </h1>
    <h2>
        <%= campground.location %>
    </h2>
    <p>
        <%= campground.description %>
    </p>
    <p>Price per night: $<%= campground.price %>
    </p>
    <footer>
        <button onclick="window.location.href='/campgrounds/new'">Add New Campground</button>
        <button onclick="window.location.href='/campgrounds/<%= campground._id %>/update'">Update Campground</button>
        <form action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
            <button type="submit">Delete Campground</button>
        </form>
        <button onclick="window.location.href='/campgrounds'">Back to Campgrounds</button>
    </footer>