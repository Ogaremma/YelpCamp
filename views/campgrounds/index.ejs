<% layout('layouts/boilerplate') -%>
    <h1>All Campgrounds</h1>
    <div><button onclick="window.location.href='/campgrounds/new'">Add New Campground</button></div>
    <ul>
        <% for (let campground of campgrounds) { %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%= campground.image %>">
                    </div>
                </div>

            </div>
            <% } %>