<% layout('layouts/boilerplate') -%>
    <div class="row">
        <h1 class="text-center">Add New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST">
                <div>
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                </div>
                <div>
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                </div>
                <button type="submit">Add Campground</button>
            </form>
            <button onclick="window.location.href='/campgrounds'">Back to Campgrounds</button>
        </div>
    </div>